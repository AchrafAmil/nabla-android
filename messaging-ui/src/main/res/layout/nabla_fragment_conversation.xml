<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context=".scene.messages.ConversationFragment"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:contentInsetLeft="16dp"
            app:contentInsetStart="16dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="?attr/homeAsUpIndicator"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chatToolbarContentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingEnd="16dp"
                >

                <com.nabla.sdk.core.ui.components.AvatarView
                    android:id="@+id/chatToolbarAvatarView"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/chatToolbarTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@id/chatToolbarSubtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/chatToolbarAvatarView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Here is a title"
                    />

                <TextView
                    android:id="@+id/chatToolbarSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/chatToolbarTitle"
                    app:layout_constraintTop_toBottomOf="@id/chatToolbarTitle"
                    tools:text="And a subtitle right here"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/chatLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        tools:visibility="visible"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/errorContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apparently, there was a little problem"
            android:textAppearance="?textAppearanceBody1"
            />

        <Button
            android:id="@+id/errorRetryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:text="Retry"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatLoaded"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        tools:visibility="visible"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/chatRecyclerBottomBarrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/nabla_conversation_timeline_item_provider_message"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/chatRecyclerBottomBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="chatComposerLayout"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chatComposerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:colorBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <View
                android:id="@+id/chatComposerTopDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?colorSurfaceStroke"
                app:layout_constraintBottom_toTopOf="@id/chatTextInputLayoutContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_goneMarginBottom="12dp"
                />

            <Button
                android:id="@+id/chatAddMediaButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                style="@style/Nabla.IconButton"
                app:icon="@drawable/ic_nabla_add"
                app:iconTint="?colorOnBackground"
                app:layout_constraintBottom_toBottomOf="@id/guidelineControlsBottom"
                app:layout_constraintEnd_toStartOf="@id/chatTextInputLayoutContainer"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/chatTextInputLayoutContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0.5dp"
                app:contentPaddingLeft="5dp"
                app:contentPaddingRight="5dp"
                app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
                app:layout_constraintEnd_toStartOf="@id/chatSendButton"
                app:layout_constraintStart_toEndOf="@id/chatAddMediaButton"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/chatMediasToSendRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        tools:itemCount="1"
                        tools:listitem="@layout/nabla_conversation_timeline_item_media_to_send"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/chatTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Nabla.Chat.ChatTextInputLayoutStyle"
                        app:placeholderText="placeholder"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/chatEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Nabla.Chat.ChatTextInputEditTextStyle"
                            android:hint="placeholder"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxHeight="200dp"
                            android:paddingVertical="12dp"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/chatSendButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                style="@style/Nabla.IconButton"
                android:contentDescription="send"
                app:icon="@drawable/ic_nabla_send"
                app:iconTint="@color/chat_message_cta_color"
                app:layout_constraintBottom_toBottomOf="@id/guidelineControlsBottom"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineBottom"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="16dp"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineControlsBottom"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="22dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>