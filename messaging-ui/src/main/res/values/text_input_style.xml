<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Nabla.Chat.ChatTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintTextAppearance">
            @style/Nabla.Chat.ChatTextInputLayoutStyleHintTextAppearance
        </item>
        <item name="hintTextColor">@color/transparent</item>
        <item name="placeholderTextAppearance">
            @style/Nabla.Chat.ChatTextInputLayoutStylePlaceholderTextAppearance
        </item>
    </style>

    <style name="Nabla.Chat.ChatTextInputLayoutStyleHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="Nabla.Chat.ChatTextInputLayoutStylePlaceholderTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Nabla.Chat.ChatTextInputEditTextStyle" parent="Nabla.Chat.ChatTextInputLayoutStylePlaceholderTextAppearance">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>
</resources>